html
    head
        link(rel='stylesheet' , href='css/styles.css')
        title= "Rustboro City"
        nav
            each option in menuOptions 
                span(class=["borderColor", "textColor", "diveContent", "divColor"])
                    a(href=option.href)= option.name
    body(class="body")
        div(class="divContainer")
            div(class="one")
                img(src=bodyData.img)
                div(class="")
                    img(class="",src=bodyData.type1)
                    img(class="",src=bodyData.type2)
                h1(class="")= "#" + bodyData.paragraph.pokemon_id + " - " + bodyData.paragraph.name
                div(class="")
                    h2(class="")= "Abilities: " + bodyData.ability
                    h2(class="")= "HP: " + bodyData.paragraph.hp
                    h2(class="")= "Attack: " + bodyData.paragraph.attack
                    h2(class="")= "Defense: " + bodyData.paragraph.defense
                    h2(class="")= "Special Attack: " + bodyData.paragraph.sp_attack
                    h2(class="")= "Special Defense: " + bodyData.paragraph.sp_defense
                    h2(class="")= "Speed: " + bodyData.paragraph.speed
                    h2(class="")= "Base Stat Total: " + bodyData.paragraph.base_total
                    div(class="hidden_stats")= "More Stats"
                        h3(class="")= "Capture Rate: " + bodyData.paragraph.capture_rate + "%"
                        h3(class="")= "Base Happiness: " + bodyData.paragraph.base_happiness
                        h3(class="")= "Base Egg Steps: " + bodyData.paragraph.base_egg_steps
                        h3(class="")= "Height: " + bodyData.paragraph.height + "m.  Weight: " + bodyData.paragraph.weight + "kg."
                        h3(class="")= "Male/Female Ratio: " + ((0 - bodyData.paragraph.percentage_male)*-1).toFixed(1) + "/" + (100 - bodyData.paragraph.percentage_male).toFixed(1)
                        h3(class="")= bodyData.paragraph.name + " is " + bodyData.legendary + "!"
                        h3(class="")= bodyData.paragraph.name + " is from Generation " + bodyData.generation + "!"
                body(class="body")
            div(class="two")
                img(src=bodyData.mon2img)
                div(class="")
                    img(class="",src=bodyData.mon2type1)
                    img(class="",src=bodyData.mon2type2)
